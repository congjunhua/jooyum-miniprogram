page {
	--color: #6DA908;
	--background-color: #262A3B;

	background: #F2F2F7;
}

.navigation-bar {
	position: fixed;
	top: 0;
	left: 0;

	width: 100vw;

	background: var(--background-color);
}

.navigation-bar-content {
	position: absolute;

	align-items: center;
}

.hello {
	color: var(--color);
	font-size: 22px;

	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.messages {
	position: relative;
	width: 64px;
}

.bellring {
	margin: 0 16px;
}

.badge {
	position: absolute;
	top: 0;
	right: 12px;
}

.swiper-item {
	width: 100%;
	height: 100%;
}

.main-functions {
	justify-content: space-evenly;
	align-items: center;

	background: var(--background-color);
}

.main-function {
	color: grey;

	align-items: center;

	padding: 8px 0;

	font-size: 14px;
}

.sub-functions {
	margin-top: 8px;

	flex-wrap: wrap;

	background: white;
}

.sub-function {
	width: 25vw;
	height: 104px;
	
	justify-content: center;
	align-items: center;
}

.sub-function-text {
	opacity: .5;
}

.modal {
	position: fixed;
	top: 0;
	left: 0;
	z-index: 10000;

	width: 100vw;
	height: 100vh;

	background: transparent;
	box-shadow: 0 -0.5 0 0 rgba(0, 0, 0, 0);
	backdrop-filter: blur(60px) saturate(1);
	-webkit-backdrop-filter: blur(60px) saturate(1);

	justify-content: center;
	align-items: center;
}

.modal-content {
	width: 90vw;
	height: fit-content;

	align-items: center;
}

.modal-title {
	color: var(--color);
	background: var(--background-color);

	width: 100%;

	padding: 12px 0;

	text-align: center;

	font-size: 21px;
	font-weight: 900;

	border-top-left-radius: 8px;
	border-top-right-radius: 8px;
}

.modal-items {
	flex-wrap: wrap;
	background: white;

	padding: 16px 8px;

	border-bottom-left-radius: 8px;
	border-bottom-right-radius: 8px;
}

.modal-item {
	align-items: center;
	width: calc((90vw - 16px) / 4);
}

.modal-item-text {
	opacity: .5;
}